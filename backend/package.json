{
  "name": "casino-chip-manager-backend",
  "version": "1.0.0",
  "description": "Backend for Casino Chip Manager (Node.js + PostgreSQL)",
  "main": "index.js",
 "type": "module",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "check-env": "node scripts/checkEnv.js",
    "create-db": "node scripts/createDatabase.js",
    "create-table": "node scripts/createTable.js",
    "drop-table": "node scripts/dropTable.js",
    "seed": "node scripts/seedData.js",
    "dev": "dotenv -e .env node src/app.js",
    "proxy": "http://localhost:5000",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:make": "node-pg-migrate create"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "pg": "^8.10.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "node-pg-migrate": "^8.0.3",
    "jest": "^29.x",
    "supertest": "^6.x",
    "cross-env": "^7.x"
  },
  "pgmigrate": {
    "migrations-dir": "migrations",
    "direction": "up",
    "extension": "cjs",
    "database-url": "${DATABASE_URL}",
    "dir": "migrations"
  }
}
