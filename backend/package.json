{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend service for managing casino chips",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src --exec \"node src/server.js\"",
    "seed": "node src/seeders/index.js",
    "test": "jest --runInBand --detectOpenHandles --verbose",
    "migrate:up": "node-pg-migrate up --dir ./migrations",
    "migrate:down": "node-pg-migrate down --dir ./migrations",
    "migrate:reset": "npm run migrate:down && npm run migrate:up"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "jest": "^28.1.0",
    "node-pg-migrate": "^7.5.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
